PANEL08 = "RACFCLS8"    /* List classes and profiles       */ /* @XX */
PANEL13 = "RACFCLSD"    /* Add class                       */ /* @AG */
PANELM2 = "RACFMSG2"    /* Execute RACF Command (pop-up)   */ /* @AG */

ADDRESS ISPEXEC                                               /* @A6 */
  Arg user
  selection = 0  /* something selected */
  "VGET (ZSCREEN ERATRACE ERASHOW) ASIS"                      /* @A7 */
  If (eratrace = 'YES') then Trace r                          /* @A4 */
  address TSO "PROFILE PREF("USERID()")"
  rlv = SYSVAR('SYSLRACF')

  seconds = time('S')
  tblb    = 'TB'ZSCREEN||SECONDS  /* table name unique */
  "TBCREATE" tblb" KEYS(CLASS PROFILE) REPLACE NOWRITE"
  call Select_class
  if selection then rc = display_table_permit()
  "TBEND" tblb
EXIT
/*--------------------------------------------------------------------*/
/*  Get permits                                                       */
/*--------------------------------------------------------------------*/
GET_PERMITS:
  class = arg(1)
  user  = arg(2)
  cmd   = "SEARCH CLASS("class") USER("user")"                /* @A5 */
  if (erashow = 'YES') then                                   /* @A5 */
     call SHOWCMD                                             /* @A5 */
  x = OUTTRAP('VAR.')
  address TSO cmd                                             /* @A5 */
  x = OUTTRAP('OFF')
  Do i = 1 to var.0   /* Scan output */
     profile = subword(var.i,1,1)
     if (profile <> 'ICH31005I') then do
        n1 = i; n2 = var.0
        "control display lock"
        "display msg(RACF012)"
        "TBMOD" tblb
     end
  end /* end_do i=1     */
RETURN 0
/*--------------------------------------------------------------------*/
/*  Display permit table                                              */
/*--------------------------------------------------------------------*/
DISPLAY_TABLE_PERMIT:
  opta = ' '
  "TBSORT  "tblb" FIELDS(CLASS,C,A,PROFILE,C,A)"
  "TBTOP   "tblb
  "TBDISPL "tblb "PANEL("PANEL08")"                           /* @AG */
  reta = rc
  do while (rc < 8)  /* tablea */
     "CONTROL DISPLAY SAVE"
     xtdtop = ztdtop
     IF (SROW <> "") & (SROW <> 0) THEN                       /* @A9 */
        IF (SROW > 0) THEN DO                                 /* @A9 */
           "TBTOP " TBLB                                      /* @A9 */
           "TBSKIP" TBLB "NUMBER("SROW")"                     /* @A9 */
        END                                                   /* @A9 */
     Select
        when (subword(ZCMD,1,1)  = 'LOCATE' |,
              subword(ZCMD,1,1)  = 'L') &,
              (subword(ZCMD,2,1) ='CLASS' |,
               subword(ZCMD,2,1) ='C') then do
               locvar  = 'CLASS'
               profile = ' '
               locval  = subword(ZCMD,3,1)
        end
        when (subword(ZCMD,1,1)  = 'LOCATE' |,
              subword(ZCMD,1,1)  = 'L') &,
              (subword(ZCMD,2,1) ='PROFILE' |,
               subword(ZCMD,2,1) ='P') then do
               locvar = 'PROFILE'
               locval = subword(ZCMD,3,1)
        end
        otherwise locvar=''
     End
     Select
        when (opta = 'S') then x = RACFAUTH(class profile user)
        otherwise nop
     End
     Do while (reta = 4)   /* process multi selection */
        "CONTROL DISPLAY RESTORE"
        "TBDISPL" tblb
        reta = rc
        "CONTROL DISPLAY SAVE"
        Select
           when (opta = 'S') then
                x = RACFAUTH(class profile user)
           otherwise nop
        End
     end
     opta = ' '
     "TBSORT "tblb" FIELDS(PROFILE,C,A)"
     if (locvar <> '') then do
        interpret locvar'='locval
        "TBTOP " tblb
        "TBSARG" tblb "NEXT NAMECOND(CLASS,GE,PROFILE,GE)"
        "TBSCAN" tblb
     end
     else do
        "TBTOP " tblb
        "TBSKIP" tblb "NUMBER("XTDTOP")"
     end
     "CONTROL DISPLAY RESTORE"
     "TBDISPL" tblb "PANEL("PANEL08")"                        /* @AG */
     reta = rc
  end  /* Do while (reta < 8) */
RETURN 0
/*--------------------------------------------------------------------*/
/*  Select class                                                      */
/*--------------------------------------------------------------------*/
SELECT_CLASS:
  call get_act_class
  rc = display_table()
  "TBEND" tbla
RETURN
/*--------------------------------------------------------------------*/
/*  Display profile permits                                           */
/*--------------------------------------------------------------------*/
GET_ACT_CLASS:
  seconds = time('S')                                         /* @AB */
  tbla    = 'TA'ZSCREEN||SECONDS  /* table name unique */     /* @AB */
  "TBCREATE" TBLA "KEYS(CLASS)",                              /* @AB */
                  "NAMES(ACTION) REPLACE NOWRITE"             /* @AB */
  Scan = 'OFF'                                                /* @AB */
  cmd  = "SETROPTS LIST"                                      /* @A5 */
  if (erashow = 'YES') then                                   /* @A5 */
     call SHOWCMD                                             /* @A5 */
  x = OUTTRAP('var.')
  address TSO cmd                                             /* @A5 */
  x = OUTTRAP('OFF')
  Do i = 1 to var.0           /* Scan output */
     temp = var.i
     if (rlv > '1081') then   /* RACF 1.9 add blank */
        temp = ' 'temp
     Select
        when (substr(temp,2,16) = 'ACTIVE CLASSES =') then do
             scan   = 'ON'
             record = substr(temp,18,80)
             nwords = words(record)
             do t = 1 to nwords
                class = subword(record,t,1)
                if (class <> 'USER'),
                 & (class <> 'DATASET'),
                 & (class <> 'GROUP') then
                   "TBMOD" tbla
             end
        end
        when (substr(temp,2,25) =,
             'GENERIC PROFILE CLASSES =') then leave
        otherwise
             if (scan = 'ON') then do
                  record = var.i
                  nwords = words(record)
                  do t = 1 to nwords
                     class = subword(record,t,1)
                     if (class <> 'USER'),
                      & (class <> 'DATASET'),
                      & (class <> 'GROUP') then
                        "TBMOD" tbla
                  end
             end
     End    /* end_select */
  end  /* end_scan output */
RETURN
/*--------------------------------------------------------------------*/
/*  Display table                                                     */
/*--------------------------------------------------------------------*/
DISPLAY_TABLE:
  opta = ' '
  sort = 'CLASS,C,A'                                          /* @AD */
  "TBSORT " tbla "FIELDS("sort")"                             /* @AD */
  "TBTOP  " tbla
  "TBDISPL" tbla "PANEL("PANEL13")"                           /* @AG */
  reta = rc
  Do while ^selection & (reta < 8)
     "CONTROL DISPLAY SAVE"
     action = ''
     lclass = ''                                              /* @AE */
     xtdtop = ztdtop
     lparm  = ""                                              /* @AB */
     PARSE VAR ZCMD ZCMD PARM SEQ                             /* @AB */
     IF (SROW <> "") & (SROW <> 0) THEN                       /* @A9 */
        IF (SROW > 0) THEN DO                                 /* @A9 */
           "TBTOP " TBLA                                      /* @A9 */
           "TBSKIP" TBLA "NUMBER("SROW")"                     /* @A9 */
        END                                                   /* @A9 */
     Select                                                   /* @AB */
        WHEN (ABBREV("SORT",ZCMD,1) = 1) THEN DO              /* @AB */
             xtdtop   = 1                                     /* @AB */
             if (seq = 'A') | (seq = 'D') then                /* @AB */
                nop                                           /* @AB */
             else                                             /* @AB */
                seq = 'A'                                     /* @AB */
             SELECT                                           /* @AB */
                when (ABBREV("CLASS",PARM,1) = 1) then        /* @AB */
                     sort = 'CLASS,C,'seq                     /* @AD */
                otherwise NOP                                 /* @AB */
             END                                              /* @AB */
        END                                                   /* @AB */
        WHEN (ABBREV("LOCATE",ZCMD,1) = 1) THEN               /* @AB */
             lclass = parm                                    /* @AE */
        When (abbrev("ONLY",zcmd,1) = 1) then do              /* @AB */
             find_str = translate(parm)                       /* @AB */
             'tbtop ' tbla                                    /* @AB */
             'tbskip' tbla                                    /* @AB */
             do forever                                       /* @AB */
                str = translate(class)                        /* @AB */
                if (pos(find_str,str) > 0) then nop           /* @AB */
                else 'tbdelete' tbla                          /* @AB */
                'tbskip' tbla                                 /* @AB */
                if (rc > 0) then do                           /* @AB */
                   'tbtop' tbla                               /* @AB */
                   leave                                      /* @AB */
                end                                           /* @AB */
             end                                              /* @AB */
        END                                                   /* @AB */
        WHEN (ABBREV("RESET",ZCMD,1) = 1) THEN DO             /* @AB */
             call get_act_class                               /* @AB */
             sort = 'CLASS,C,A'                               /* @AD */
             xtdtop   = 1                                     /* @AB */
        END                                                   /* @AB */
        otherwise NOP                                         /* @AB */
     END /* Select */                                         /* @AB */
     select
        when (opta = 'S') then do
             DISPCLS = CLASS                                  /* @AC */
             rc = get_permits(class,user) /*get permits*/
             selection = 1
        end
        otherwise nop
     End
     Do while (reta = 4)   /* process multi selection */
        "CONTROL DISPLAY RESTORE"
        "TBDISPL" tbla
        reta = rc
        "CONTROL DISPLAY SAVE"
        Select
           when (opta = 'S') then
                rc = get_permits(class,user) /*get permits*/
           otherwise nop
        End
     end
     opta = ' '
     "TBSORT" tbla "FIELDS("sort")"                           /* @AB */
     "TBTOP  " tbla
     if (lclass <> '') then do                                /* @AE */
        class = lclass                                        /* @AE */
        "TBSARG" TBLA "NEXT NAMECOND(CLASS,GE)"               /* @AE */
        "TBSCAN" TBLA "NOREAD"                                /* @AE */
     end                                                      /* @AE */
     else                                                     /* @AB */
        "TBSKIP" tbla "NUMBER("XTDTOP")"
     "CONTROL DISPLAY RESTORE"
     if ^selection then do
        "TBDISPL" tbla "PANEL("PANEL13")"                     /* @AG */
        reta = rc
     end
  end  /* Do while (reta < 8) */
RETURN 0
/*--------------------------------------------------------------------*/
/*  Error message                                                     */
/*--------------------------------------------------------------------*/
ERROR:
  say 'Error RACFCLSS at line 'sigl
EXIT
/*--------------------------------------------------------------------*/
/*  Display RACF command                                          @A5 */
/*--------------------------------------------------------------------*/
SHOWCMD:                                                      /* @A5 */
  PARSE VAR CMD MSG1 60 MSG2 121 MSG3                         /* @A5 */
  "ADDPOP ROW(6) COLUMN(4)"                                   /* @AH */
  "DISPLAY PANEL("PANELM2")"                                  /* @AG */
  "REMPOP"                                                    /* @AH */
RETURN                                                        /* @A5 */
